# Production Environment Configuration for suryayoga.ge
NODE_ENV=production
NEXT_PUBLIC_BASE_URL=https://suryayoga.ge

# Generate secure JWT secret
JWT_SECRET=surya-yoga-production-jwt-secret-2024-secure-key-32chars-minimum

# Production Database Path
DATABASE_PATH=/var/lib/suryayoga/surya-yoga.db

# Gmail API Configuration - UPDATE WITH REAL VALUES
GMAIL_CLIENT_ID=your-production-gmail-client-id
GMAIL_CLIENT_SECRET=your-production-gmail-client-secret
GMAIL_REFRESH_TOKEN=your-production-gmail-refresh-token
GMAIL_REDIRECT_URI=https://suryayoga.ge/api/auth/google/callback
GMAIL_USER=suryayogageorgia@gmail.com

# Security Settings
SECURE_COOKIE=true
ALLOWED_ORIGINS=https://suryayoga.ge,https://www.suryayoga.ge

# File Upload Configuration
UPLOAD_DIR=/var/lib/suryayoga/uploads
MAX_FILE_SIZE=52428800

# CORS Configuration
CORS_ORIGIN=https://suryayoga.ge