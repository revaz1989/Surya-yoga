# Environment Configuration for Surya Yoga
# Copy this file to .env.local for development or .env.production for production

# Application Environment
NODE_ENV=production
NEXT_PUBLIC_BASE_URL=https://suryayoga.ge

# JWT Secret (Generate a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-key-here-32-chars-minimum

# Database Configuration
# For production, consider using a persistent database location
DATABASE_PATH=/var/lib/suryayoga/surya-yoga.db

# Gmail API Configuration (for email verification and notifications)
GMAIL_CLIENT_ID=your-gmail-oauth-client-id
GMAIL_CLIENT_SECRET=your-gmail-oauth-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token
GMAIL_REDIRECT_URI=https://suryayoga.ge/api/auth/google/callback
GMAIL_USER=suryayogageorgia@gmail.com

# Google OAuth Configuration (if implementing social login)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_REDIRECT_URI=https://suryayoga.ge/api/auth/google/callback

# Security Settings
SECURE_COOKIE=true
ALLOWED_ORIGINS=https://suryayoga.ge,https://www.suryayoga.ge

# File Upload Configuration
UPLOAD_DIR=/var/lib/suryayoga/uploads
MAX_FILE_SIZE=50MB

# CORS Configuration
CORS_ORIGIN=https://suryayoga.ge